{
  "private": true,
  "name": "causal-net",
  "version": "0.0.2",
  "main": "dist/@causalNet/pipeline.node.js",
  "module": "dist/@causalNet/pipeline.node.js",
  "browser": "dist/@causalNet/pipeline.web.js",
  "author": "nguyenhuynh200188@gmail.com",
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start:web": "webpack --watch --info-verbosity verbose --config webpack.web.babel.js",
    "start:examples": "webpack-dev-server --open --config webpack.examples.babel.js",
    "build:examples": "webpack --config webpack.examples.babel.js",
    "start:node": "webpack --watch --info-verbosity verbose --config webpack.node.babel.js",
    "build:clean": "rimraf dist",
    "build:dev": "webpack --config webpack.dev.babel.js",
    "build:prod": "webpack --config webpack.prod.babel.js",
    "test": "jest",
    "test:report": "jest --coverage",
    "doc": "jsdoc -c jsdoc.json",
    "build:all": "yarn build-utils && yarn build-core && yarn build-memcache && yarn build-dataset",
    "build-utils": "cd packages/causality-utils; yarn build",
    "build-core": "cd packages/causality-core; yarn build",
    "build-dataset": "cd packages/causality-dataset; yarn build",
    "build-memcache": "cd packages/causality-memcache; yarn build"
  },
  "jest": {
    "testEnvironment": "node"
  },
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "@babel/plugin-proposal-object-rest-spread": "^7.2.0",
    "@babel/plugin-syntax-dynamic-import": "^7.2.0",
    "@babel/plugin-transform-runtime": "^7.2.0",
    "@babel/preset-env": "^7.2.3",
    "@babel/register": "^7.0.0",
    "@babel/types": "^7.2.2",
    "babel-loader": "^8.0.4",
    "eslint": "^5.12.0",
    "eslint-loader": "^2.1.1",
    "html-webpack-plugin": "^3.2.0",
    "webpack": "^4.28.2",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.13",
    "webpack-merge": "^4.1.5"
  }
}
