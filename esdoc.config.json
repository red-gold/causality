{
  "source": "./",
  "destination": "./doc_dist",
  "includes": [ "^(src\\/).*\\.js$", 
                "^(packages\\/).*?(src\\/).*\\.js"
               ],
  "excludes": [ ".*?(node_modules).*?", "(test\\/).*\\.js$", ".*?(examples\\/).*\\.js$" ],
  "index": "./README.md",
  "plugins": [
        { "name": "esdoc-standard-plugin",
          "option": {
            "manual": {
              "globalIndex": true,
              "index": "./causal-doc/index.md",
              "asset": "./causal-doc/asset",
              "files": [
                "./causal-doc/overview/introduction.md",
                "./causal-doc/overview/packages.md",
                "./causal-doc/tutorials/streamProcessingText8.babel.node.js.md"
              ]
            }
            ,
            "test": {
                "source": "./",
                "interfaces": ["test"],
                "excludes": [ ".*?(node_modules).*?" ],
                "includes": ["^(packages\\/).*?(test\\/).*?(spec|test)\\.js$"]
            }
          }
        },
        { "name": "esdoc-ecmascript-proposal-plugin", "option": {"all": true}},
        {"name": "esdoc-inject-style-plugin", "option": 
            {
              "enable": true, 
              "styles": [
                "./causal-doc/css/pure-min.css",
                "./causal-doc/css/causal-style.css"
              ]
            }
        },
        { "name": "esdoc-inject-script-plugin", 
          "option": {
            "enable": true, 
            "scripts": 
               [
                  "./causal-doc/scripts/jquery-3.3.1.min.js",
                  "./causal-doc/scripts/run_examples.js"]
            }
        },
        { "name": "esdoc-publish-html-plugin", 
          "option": 
          { "template": "./causal-doc/template/"} },
        { "name": "./causal-doc/esdoc.plugin.js" }
  ]
}